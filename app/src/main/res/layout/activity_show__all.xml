<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".Show_All">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="รายละเอียด"
        android:textColor="#ff8080"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#f06050"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@drawable/backde"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tdata1"
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="ชื่อผู้เข้าสอบ"/> <!-- 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tdata2"
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="วิชาที่สอบ"/> <!-- 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tdata3"
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="รอบที่สอบ"/> <!-- 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tdata4"
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="ผู้บันทึกคะแนน"/> <!-- 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tdata5"
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="วันที่บันทึกคะแนน"/> <!-- 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tdata6"
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="คะแนนรวม"/> <!-- 6 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tdata"
                android:textColor="#555"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="ผลการสอบ"/> <!-- 7 -->
        </LinearLayout><!-- Header-->
        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#ff8080"/> <!-- line -->
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data1"
                android:textColor="#888"
                android:textSize="20dp"
                android:textStyle="normal"
                android:padding="5dp"
                android:text="ชื่อผู้เข้าสอบ"/> <!-- 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data2"
                android:textColor="#888"
                android:textSize="20dp"
                android:textStyle="normal"
                android:padding="5dp"
                android:text="วิชาที่สอบ"/> <!-- 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data3"
                android:textColor="#888"
                android:textSize="20dp"
                android:textStyle="normal"
                android:padding="5dp"
                android:text="รอบที่สอบ"/> <!-- 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data4"
                android:textColor="#888"
                android:textSize="20dp"
                android:textStyle="normal"
                android:padding="5dp"
                android:text="ผู้บันทึกคะแนน"/> <!-- 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data5"
                android:textColor="#888"
                android:textSize="20dp"
                android:textStyle="normal"
                android:padding="5dp"
                android:text="วันที่บันทึกคะแนน"/> <!-- 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data6"
                android:textColor="#888"
                android:textSize="20dp"
                android:textStyle="normal"
                android:padding="5dp"
                android:text="คะแนนรวม"/> <!-- 6 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/data7"
                android:textColor="#888"
                android:textSize="20dp"
                android:textStyle="normal"
                android:padding="5dp"
                android:text="ผลการสอบ"/> <!-- 7 -->
        </LinearLayout> <!-- Output-->
    </LinearLayout>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:text="BACK"
        android:layout_marginTop="10dp"
        android:id="@+id/back"
        android:clickable="true"/>

</LinearLayout>